<header class="seneschal-header flexrow">
  <h4 class="noborder"><i class="fas fa-hat-wizard"></i> {{localize "SENESCHAL.PanelTitle"}}</h4>
  <div class="seneschal-header-buttons">
    <button type="button" class="seneschal-documents" title="{{localize 'SENESCHAL.Documents.Title'}}">
      <i class="fas fa-folder-open"></i>
    </button>
    <button type="button" class="seneschal-new-conversation" title="{{localize 'SENESCHAL.NewConversation'}}">
      <i class="fas fa-plus"></i>
    </button>
    <button type="button" class="seneschal-clear-history" title="{{localize 'SENESCHAL.ClearHistory'}}">
      <i class="fas fa-trash"></i>
    </button>
  </div>
</header>

<section class="seneschal-messages flexcol">
  {{#each messages}}
  <div class="seneschal-message {{this.role}}">
    <div class="seneschal-message-content">
      {{{this.content}}}
    </div>
  </div>
  {{/each}}

  {{#if isThinking}}
  <div class="seneschal-thinking">
    {{localize "SENESCHAL.Thinking"}}
  </div>
  {{/if}}

  {{#if toolStatus}}
  <div class="seneschal-tool-status">
    <i class="fas fa-cog fa-spin"></i>
    <span>{{toolStatus}}</span>
  </div>
  {{/if}}

  {{#if isPaused}}
  <div class="seneschal-pause">
    <div class="seneschal-pause-message">{{pauseMessage}}</div>
    <div class="seneschal-pause-buttons">
      <button type="button" class="seneschal-continue">
        <i class="fas fa-play"></i> {{localize "SENESCHAL.Continue"}}
      </button>
      <button type="button" class="seneschal-cancel">
        <i class="fas fa-stop"></i> {{localize "SENESCHAL.Cancel"}}
      </button>
    </div>
  </div>
  {{/if}}
</section>

<footer class="seneschal-input-container flexrow">
  <textarea
    class="seneschal-input"
    placeholder="{{localize 'SENESCHAL.Placeholder'}}"
    rows="1"
    {{#if isProcessing}}disabled{{/if}}
  ></textarea>
  <button type="button" class="seneschal-send" {{#if isProcessing}}disabled{{/if}}>
    <i class="fas fa-paper-plane"></i>
  </button>
</footer>
