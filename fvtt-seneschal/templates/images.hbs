<div class="seneschal-images-content" style="padding: 1rem;">
  <h3 style="margin: 0 0 1rem 0;"><i class="fas fa-images"></i> {{localize "SENESCHAL.Images.Title"}}{{#if documentTitle}} - {{documentTitle}}{{/if}}</h3>

  {{#if isLoading}}
  <p><i class="fas fa-spinner fa-spin"></i> {{localize "SENESCHAL.Images.Loading"}}</p>
  {{else if error}}
  <p style="color: red;"><i class="fas fa-exclamation-triangle"></i> {{error}}</p>
  {{else if images.length}}
  <div class="seneschal-images-list" style="display: flex; flex-wrap: wrap; gap: 1rem;">
    {{#each images}}
    <div class="seneschal-image-item" data-image-id="{{this.id}}" style="width: 220px; border: 1px solid #888; border-radius: 4px; background: #f5f5f5; overflow: hidden;">
      <img src="{{../backendUrl}}/api/images/{{this.id}}/data" alt="Page {{this.page_number}}" style="display: block; width: 220px; height: 160px; object-fit: contain; background: #ddd; cursor: pointer;" />
      <div class="seneschal-image-item-info" style="padding: 0.5rem; font-size: 0.85rem;">
        <small style="color: #666;"><i class="fas fa-file"></i> {{localize "SENESCHAL.Images.Page"}} {{this.page_number}}{{#if this.width}} | {{this.width}}x{{this.height}}{{/if}}</small>
        {{#if this.description}}
        <p style="margin: 0.5rem 0; max-height: 3.5em; overflow: hidden;" title="{{this.description}}">{{this.description}}</p>
        {{else}}
        <p style="margin: 0.5rem 0; color: #999; font-style: italic;"><i class="fas fa-comment-slash"></i> {{localize "SENESCHAL.Images.NoDescription"}}</p>
        {{/if}}
        <div class="seneschal-image-item-buttons" style="display: flex; gap: 0.5rem; margin-top: 0.5rem;">
          <button type="button" class="seneschal-image-copy" style="flex: 1; padding: 0.25rem;" title="{{localize 'SENESCHAL.Images.CopyToFVTT'}}"><i class="fas fa-copy"></i></button>
          <button type="button" class="seneschal-image-delete" style="flex: 1; padding: 0.25rem;" title="{{localize 'SENESCHAL.Images.Delete'}}"><i class="fas fa-trash"></i></button>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <p style="text-align: center; color: #999;">
    <i class="fas fa-image" style="font-size: 2rem; opacity: 0.3;"></i><br/>
    {{localize "SENESCHAL.Images.Empty"}}
  </p>
  {{/if}}
</div>
